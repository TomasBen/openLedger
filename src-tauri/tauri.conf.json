{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "openLedger",
  "version": "0.1.0",
  "identifier": "OpenLedger",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "decorations": false,
        "transparent": true,
        "title": "OpenLedger",
        "center": true,
        "width": 1500,
        "height": 900
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:accsw.db"]
    }
  }
}
